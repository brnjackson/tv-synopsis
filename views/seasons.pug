html
    head
        link(rel="stylesheet" href="/css/styles.css")
    body
    center
        h1= 'Season ' + selectedSeason[0].number
    center
      a(class="homepage" href="/") back to main page
        table
          th No.
          th Title
          th Director
            for episode in selectedSeason[0].episodes
              tr
                td(class="number")= episode.number
                td(class="title")= episode.title
                td(class="director")= episode.director
              tr
                td(class="synopsis" colspan=3)= episode.synopsis